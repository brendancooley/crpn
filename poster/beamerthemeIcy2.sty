\ProvidesPackage{beamerthemeIcy2}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\selectcolormodel{rgb}
\mode<presentation>

% Color scheme from <http://paletton.com/#uid=13H0u0kbCy+66On8MGKeDtJhNq5>
\definecolor{i6colorscheme1}{HTML}{5C749D}  %  e.g. for headline background
\definecolor{i6colorscheme2}{HTML}{FFFFFF}  %  e.g. title in headline
\definecolor{i6colorscheme3}{HTML}{B7C5DD}  %  e.g. for poster background
\definecolor{i6colorscheme4}{HTML}{FFFFFF}  %  e.g. for block background
\definecolor{i6colorscheme5}{HTML}{FFFFFF}  %  e.g. title in headline, separation lines
\definecolor{i6colorscheme6}{HTML}{445E8A}  %  e.g. for alert, bullets

  
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% headline colors and fonts
\setbeamercolor{headline}{fg=white,bg=i6colorscheme1}
\setbeamercolor{title in headline}{fg=i6colorscheme5}
\setbeamercolor{author in headline}{fg=white}
\setbeamercolor{institute in headline}{fg=i6colorscheme3}
\setbeamercolor{logo in headline}{fg=black,bg=i6colorscheme3}

% lines
%\setbeamercolor{upper separation line head}{fg=ta2orange}
\setbeamercolor{separation line}{bg=i6colorscheme5}

% footline colors and fonts
\setbeamercolor{footline}{fg=white,bg=i6colorscheme1}
\setbeamerfont{footline}{size=\normalsize}

% poster background, body colors, and fonts
\setbeamercolor*{normal text}{fg=black,bg=i6colorscheme3}

% block environment
\setbeamercolor*{block body}{bg=white,fg=black}
\setbeamercolor*{block title}{fg=i6colorscheme5,bg=i6colorscheme1}
\setbeamerfont{block title}{size=\large,series=\bf}

% example environment
\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}
\setbeamerfont{example title}{size=\large,series=\bf}

%\setbeamercolor*{example body}{fg=white,bg=i6colorscheme4}
%\setbeamercolor*{example title}{fg=white,bg=i6colorscheme1}

%  \setbeamercolor{framesubtitle}{fg=ta3orange, bg=ta2gray}
%  \setbeamercolor{author in head/foot}{fg=tabutter, bg=black}
%  \setbeamercolor{title in head/foot}{bg=tabutter, fg=black}

\setbeamercolor{alerted text}{fg=i6colorscheme6}

%\setbeamercolor{example text}{fg=taorange}
%\setbeamercolor{structure}{fg=ta3skyblue}

\setbeamertemplate{itemize items}[triangle]
\setbeamercolor{itemize item}{fg=i6colorscheme6}
\setbeamercolor{enumerate item}{fg=i6colorscheme6}
\setbeamertemplate{navigation symbols}{}  % no navigation on a poster

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{block begin}{
  \vskip.75ex
  \begin{beamercolorbox}[ht=3.8ex,dp=0.3ex,center,rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex]{block title}%
    \usebeamerfont*{block title}\sffamily\insertblocktitle
  \end{beamercolorbox}%
  {\ifbeamercolorempty[bg]{block body}{}{\nointerlineskip\vskip-0.5pt}}%
  \usebeamerfont{block body}%
  \begin{beamercolorbox}[rounded=false,shadow=false,leftskip=1cm,colsep*=.75ex,sep=2ex,vmode]{block body}%
    \ifbeamercolorempty[bg]{block body}{\vskip-.25ex}{\vskip-.75ex}\vbox{}%
  }
  
  \setbeamertemplate{block end}{
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{  
  \leavevmode

  % modified to have no logo
  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \hskip2ex
    \vskip4ex
    \centering
    \usebeamercolor{title in headline}{\sffamily\color{fg}\textbf{\LARGE{\inserttitle}}\\[3ex]}
    \usebeamercolor{author in headline}{\sffamily\color{fg}\Large{
        \parbox{\widthof{University of Notre Dame}}{\centering Robert J. Carroll}
        \qquad\qquad
        \parbox{\widthof{Vanderbilt University}}{\centering Brenton Kenkel}
      } \\[1ex]}
    \usebeamercolor{institute in headline}{\sffamily\color{fg}\Large{
        University of Notre Dame
        \qquad\qquad
        Vanderbilt University
      }\\[1ex]}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{footline}{
  \begin{beamercolorbox}[wd=\paperwidth]{upper separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
  
  \leavevmode%
  \begin{beamercolorbox}[ht=4ex,leftskip=1cm,rightskip=1cm]{footline}%
    \sffamily
    \parbox{.4\textwidth}{\raggedright
      APSA Annual Meeting, Washington, D.C.
    }
    \parbox{.2\textwidth}{\centering
      August 29, 2014
    }
    \parbox{.4\textwidth}{\raggedleft
      \texttt{rcarrol3@nd.edu},
      \texttt{brenton.kenkel@vanderbilt.edu}
      \qquad\qquad
    }
    \vskip1ex
  \end{beamercolorbox}
  \vskip0pt%
  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line foot}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<all>
